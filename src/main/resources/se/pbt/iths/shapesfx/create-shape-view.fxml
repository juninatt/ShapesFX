<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" fx:controller="se.pbt.iths.shapesfx.controller.CreateShapeController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label styleClass="title-label" GridPane.columnSpan="2" />

    <Label text="Size:" GridPane.rowIndex="1" />
    <Slider fx:id="sizeSlider" min="10" max="100" value="50" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Color:" GridPane.rowIndex="2" />
    <ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <value>
            <Color fx:constant="LIGHTBLUE" />
        </value>
    </ColorPicker>

    <Button text="Confirm" onAction="#confirmShapeButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="3" />
</GridPane>
